{
  "name": "wr-base-template",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve -o",
    "package": "npm run build:lib && cd dist/wr-example-component && npm pack",
    "build": "ng build",
    "build:lib": "ng build wr-example-component",
    "build:widget": "ng build wr-example-widget --prod --base-href=/wr-example-widget/",
    "docs": "./node_modules/.bin/compodoc -p tsconfig.doc.json",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:lib && npm run test:widget",
    "test:lib": "jest --config ./projects/wr-example-component/jest.lib.config.js",
    "test:widget": "jest --config ./projects/wr-example-widget/jest.app.config.js",
    "test:lib:watch": "jest -o --watch --config ./projects/wr-example-component/jest.lib.config.js",
    "test:widget:watch": "jest -o --watch --config ./projects/wr-example-widget/jest.app.config.js",
    "test:coverage": "npm run test:lib:coverage && npm run test:widget:coverage",
    "test:lib:coverage": "jest --coverage --config ./projects/wr-example-component/jest.lib.config.js",
    "test:widget:coverage": "jest --coverage --config ./projects/wr-example-widget/jest.app.config.js"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.3",
    "@angular/cli": "~13.3.3",
    "@angular/compiler-cli": "~13.3.0",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^12.11.1",
    "jest": "^27.0.0",
    "jest-localstorage-mock": "^2.4.21",
    "jest-preset-angular": "^11.1.2",
    "jest-zone-patch": "0.0.10",
    "ng-packagr": "^13.0.0",
    "typescript": "~4.6.2"
  }
}
